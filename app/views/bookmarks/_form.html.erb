<%= form_for [topic, bookmark] do |f| %>
    <h3> Add Bookmark</h3>
    <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class:'form-control'%>
    </div>
    <div class='form-group'>
        <%= f.label :url %>
        <%= f.text_field :url, placeholder: 'Include https://www', class:'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.submit "Submit", class:'btn btn-sm' %>
    </div>
<% end %>