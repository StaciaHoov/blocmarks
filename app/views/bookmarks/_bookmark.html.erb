<li>
    <h3><%= link_to bookmark.title, bookmark.url, :target=>'_blank' %>
    <% if policy(bookmark).destroy? %>
        <%= link_to topic_bookmark_path(bookmark.topic, bookmark), method: :delete, class: 'btn btn-sm' do %>
            <span class= 'glyphicon glyphicon-remove-circle' aria-hidden="true"></span>
        <% end %>
    <% end %><%= render partial: 'likes/like', locals: {topic: bookmark.topic, bookmark: bookmark} %></h3>
</li>