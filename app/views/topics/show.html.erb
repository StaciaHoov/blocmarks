<h1><%= @topic.title %></h1>

<div class='row'>
    <div class='col-md-8'>
        <ul>
            <% @topic.bookmarks.each do |bookmark| %>
                <li><%= link_to bookmark.title, bookmark.url, :target=>'_blank' %>
                <%= link_to topic_bookmark_path(@topic, bookmark), method: :delete, class: 'btn btn-sm' do %>
                    <span class= 'glyphicon glyphicon-remove-circle' aria-hidden="true"></span>
                <% end %></li>
            <% end %>
        </ul>
    </div>

    <div class='col-md-8'>
        <h3>New Bookmark</h3>
        <%= form_for [@topic, Bookmark.new] do |f| %>
        <div class='col-md-4'>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div class='col-md-4'>
            <%= f.label :url %>
            <%= f.text_field :url %>
        </div>
        <div class='col-md-4'>
            <%= f.submit "Submit" %>
        </div>
        <% end %>

    </div>
</div>