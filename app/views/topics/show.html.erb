<h1><%= @topic.title %>  <%= link_to "Edit topic", edit_topic_path, class: 'btn btn-success' %></h1>

<div class='row'>
    <div class='col-md-12'>
      <ul class= "list-unstyled">
        <%= render @topic.bookmarks %>
      </ul>
    </div>

    <div class='col-md-8'>
      <% if policy(Bookmark.new).create? %>
        <h4>New Bookmark</h4>
          <%= render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: Bookmark.new } %>
      <% end %>
    </div>
</div>