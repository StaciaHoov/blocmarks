<h1>All Blocmarks</h1>
<div class='row'>
    <div class='col-md-8'>
        <% @topics.each do |topic| %>
            <h3><%= link_to topic.title, topic %>
            <% if policy(topic).destroy? %>
                <%= link_to topic, method: :delete, class: 'btn btn-sm' do %>
                    <span class= 'glyphicon glyphicon-remove-circle' aria-hidden="true"></span>
                <% end %>
            <% end %>
            </h3>
        <% end %>
    </div>
    <br>
    <div class='col-md-8'>
        <%= form_for @new_topic do |f| %>
            <%= f.text_field :title %>
            <%= f.submit "Add Topic" %>
        <% end %>
    </div>
</div>
