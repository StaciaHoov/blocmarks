<!DOCTYPE html>
<html>
<head>
  <title>Blocmarks</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class= "nav nav-tabs">
      <li><%= link_to "About", welcome_about_path %></li>
      <li><%= link_to "Topics", root_path %></li>
      <li><% if current_user %>
            <%= link_to "My Bookmarks", user_path(current_user) %>
          <% end %>
      </li>
      <div class="pull-right user-info">
        <ul class="list-unstyled">
          <% if current_user %>
            <li><p>Hello <%= current_user.name || current_user.email %>!</p></li>
            <li><%= link_to "Edit User    ", edit_user_registration_path %>|
            <%= link_to "  Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <%= link_to new_user_registration_path, class: 'btn btn-primary btn-sm' do %>
              <span class='glyphicon glyphicon-pencil'></span>
            <% end %> 
            <%= link_to new_user_session_path, class: 'btn btn-primary btn-sm' do %>
              <span class= 'glyphicon glyphicon-log-in'></span>
            <% end %>
          <% end %>
        </ul>
      </div>
    </ul>
    
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>  
      
    <%= yield %>
  </div>

</body>
</html>
