@import "bootstrap-sprockets";
@import "bootstrap";

body {
    background-image: url(<%= asset_path("hero-area.jpg") %>);
    background-repeat: no-repeat;
    background-position: bottom center;
    background-size: cover;
    background-attachment: fixed;
    color: black;
    
}

a {
    color: #e4e441;
}

.menu {
    padding: 100px 20px 100px 35px;
    background: rgba(0,0,0,0.4);
    line-height: 40px;
}

.menu {
    font-size: 1em;
}

.menu a, .user-info a {
    color: #fff;
}

.heading {
    margin-top: 50px
}

.heading h1 {
    text-align: center;
}

.points li {
    line-height: 40px;
    padding-left: 50px;
    font-weight: bold;
}

.sign-up {
    padding-left: 120px
}
    